<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/coin_name"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:gravity="center"
        android:text="Coin Name"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/roundID"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:minWidth="180sp"
        android:text="Round ID"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/coin_name"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/coin_name"
        app:layout_constraintTop_toBottomOf="@+id/coin_name" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:minWidth="180sp"
        android:text="Price"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/coin_name"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/coin_name"
        app:layout_constraintTop_toBottomOf="@+id/roundID" />

    <TextView
        android:id="@+id/startedAt"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:minWidth="180sp"
        android:text="Started At"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/coin_name"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/coin_name"
        app:layout_constraintTop_toBottomOf="@+id/price" />

    <TextView
        android:id="@+id/updatedAt"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:minWidth="180sp"
        android:text="Updated At"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/coin_name"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/coin_name"
        app:layout_constraintTop_toBottomOf="@+id/startedAt" />

    <TextView
        android:id="@+id/answeredInRound"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="50dp"
        android:forceHasOverlappingRendering="true"
        android:gravity="center"
        android:minWidth="180sp"
        android:text="Answered In Round"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/coin_name"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/coin_name"
        app:layout_constraintTop_toBottomOf="@+id/updatedAt" />
</androidx.constraintlayout.widget.ConstraintLayout>